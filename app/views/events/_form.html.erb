
<%= simple_form_for [@profile, @event] do |f| %>


  <%= f.error_notification %>

  <%= f.input :name %>
  <%= f.input :start_date, label: "Start date and time", order: [:day, :month, :year] %>
  <%= f.input :end_date, label: "End date and time", order: [:day, :month, :year] %>
  <%= f.input :description %>
  <%= f.input :category, collection: ["Concert", "Exhibition", "Performance"] %>
  <%= f.input :bar_id, collection: current_user.bars, value_method: :id %>

  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>

  <%= f.button :submit, "Submit", class: "b-border-tbg" %>
<% end %>
