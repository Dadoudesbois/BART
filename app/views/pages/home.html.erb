<%= render 'home-banner'%>

<div class="container">


  <br><h1>Search for an event nearby !</h1>

        <div
      id="map"
      style="width: 100%;
      height: 300px; margin: 10px auto; box-shadow: 0 0 10px rgba(0,0,0,0.2);"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
    ></div><br>

  <% if !@events.empty? %>
  <div class="cards-grid-3">
    <% @events.each do |event| %>
        <div class="card-event-home" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= event.photo %>');">
          <p class="card-event-date">25 Augustus 2019</p>

          <p class="title"><%= event.name %></p>
          <% if current_user %>
            <%= link_to "Show", event_path(event), class: "button" %>
          <% else %>
            <%= link_to "Preview", preview_event_path(event), class: "button" %>
          <% end %>

        </div>
    <% end %>
  </div>
<% end %>


