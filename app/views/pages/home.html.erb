<div class="container">


  <br><h1>Search for an event nearby !</h1>

  <%= simple_form_for(:event_search, url: events_search_path, remote: true) do |form| %>
    <%= form.input :content %>
    <%= form.button :submit %>
  <% end %>

  <div id="event_elements">

  <% if !@events.empty? %>
         <div
      id="map"
      style="width: 100%;
      height: 300px; margin: 10px auto; box-shadow: 0 0 10px rgba(0,0,0,0.2);"
