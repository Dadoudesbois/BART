<div class="container"><br><br><br><br>
  <% if !@chatboxes.empty? %>
    <div class="sidenav">
      <% @chatboxes.each do |hash| %>
        <div class="sidenav-container">
          <div>
            <h3><%= hash[:partners_name] %>:</h3>
          </div>
          <div class="sidenav-message-container">
            <div>
              <p><%= cl_image_tag hash[:user_photo], class: "avatar" %></p>
            </div>
            <div>
              <h4><%= hash[:last_msgs_content] %></h4><br>
            </div>
            <div>
              <%= link_to "=>", chatbox_path(hash[:id]),class: "b-border-tbg" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

  <% else %>

    <h1>No messages... yet ! </h1>
    <%if current_user.profile.is_bar_manager %>
      <h3><%= link_to "Discover our Artists âœ¨", profiles_path, class: "b-border-tbg fullspace" %></h3>
    <% else %>
      <h3><%= link_to "Discover our bars ðŸ¸", bars_path, class: "b-border-tbg fullspace" %></h3>
    <% end %>
  <% end %>
</div>



















