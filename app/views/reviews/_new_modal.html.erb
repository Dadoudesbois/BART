

<!-- Modal -->
<div class="modal fade" id="addEvent<%= event.id %>ReviewModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content"style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://source.unsplash.com/1VPoVeKGSWc/1200x600);">
      <div class="modal-header">
        <h1 class="modal-title" id="exampleModalLongTitle">
          <%= event.name %> ðŸ’¡
        </h1>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body">
            <%= simple_form_for [event, review] do |f| %>
              <%= f.error_notification %>

              <%= f.input :content,  wrapper_html: { class: "input-des" } %>
              <%= f.input :rating, collection: 1..5,  wrapper_html: { class: "input-des" } %>

      </div>
      <div class="modal-footer">
        <button type="button" class="b-border-whitebg" data-dismiss="modal">x</button>
        <%= f.button :submit, "Submit", class:"b-border-whitebg" %>
    <% end %>
      </div>
    </div>
  </div>
</div>
