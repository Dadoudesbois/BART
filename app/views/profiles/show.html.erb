<h1>Profiles#show</h1>
<p>Find me in app/views/profiles/show.html.erb</p>

<% if current_user.profile.is_bar_manager && @profile.is_artist %>
  <%= link_to 'Create an event with this artist!', new_profile_event(@profile) %>
<% end %>

<% if !current_user.bars.empty? && @profile.is_artist %>
  <%= link_to "Contact this artist !", profile_chatboxes_path(@profile) %>
<% end %>

<% if current_user.profile.is_artist && @profile.is_bar_manager %>
  <%= link_to "Contact this bar !", profile_chatboxes_path(@profile) %>
<% end %>
