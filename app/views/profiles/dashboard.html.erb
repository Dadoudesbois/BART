<div class="container"><br><br><br><br>


  <% if !@unconfirmed_events.empty? %>


    <br><h1>Unconfirmed Events</h1>

    <div class="cards-grid-4">

      <% @unconfirmed_events.each do |event| %>

      <div class="card-img-v">
        <%= cl_image_tag event.photo, height: 160, width: 160, crop: :fill %>
        <div class="card-product-infos">
          <h2><%= event.name %></h2>
          <p><%= link_to 'See more details', event_path(event), class: "b-border-tbg" %></p>
          <% if current_user.profile.is_artist %>
             <%= link_to "Confirm event", confirm_event_path(event), class: "b-border-tbg" %>
          <% end %>
          <% if current_user.profile.is_bar_manager %>
            <p><%= link_to 'Edit event', edit_event_path(event), class: "b-border-tbg" %></p>
            <p><%= link_to 'Delete event', event_path(event), method: :delete, class: "b-border-tbg", data: { confirm: "Are you sure?" } %></p>
          <%end%>

        </div>
      </div>
      <% end %>
    </div>
    <% end %>

  <% if !@current_events.empty? %>

  <br><h1>Current Events</h1>

  <div class="cards-grid-4">

  <% @current_events.each do |event| %>

  <div class="card-img-v">
    <%= cl_image_tag event.photo, height: 160, width: 160, crop: :fill %>
    <div class="card-product-infos">
      <h2><%= event.name %></h2>
<!--       <p><#%= event[:description] %></p> -->
      <p><%= link_to 'See more details', event_path(event), class: "b-border-tbg" %></p>
      <% if current_user.profile.is_bar_manager %>
        <p><%= link_to 'Edit event', edit_event_path(event), class: "b-border-tbg" %></p>
        <p><%= link_to 'Delete event', event_path(event), method: :delete, class: "b-border-tbg", data: { confirm: "Are you sure?" } %></p>
      <%end%>

      </div>
    </div>
    <% end %>
  </div>
  <% end %>


  <% if !@past_events.empty? %>

  <br><h1>Past Events</h1>
  <div class="cards-grid-4">
  <% @past_events.each_with_index do |event, i| %>

  <div class="card-img-v">
    <%= cl_image_tag event.photo, height: 160, width: 160, crop: :fill %>
    <div class="card-product-infos">
      <h2><%= event.name %></h2>
<!--       <p><#%= event[:description] %></p> -->
      <p><%= link_to 'See more details', event_path(event), class: "b-border-tbg" %></p>

      <% if current_user.profile.is_bar_manager %>
        <p><%= link_to 'Edit event', edit_event_path(event), class: "b-border-tbg" %></p>
        <p><%= link_to 'Delete event', event_path(event), class: "b-border-tbg", method: :delete, data: { confirm: "Are you sure?" } %></p>
      <%end%>

      <% if @reviews[i] %>
        <br><div class="review">
          <p><%= @reviews[i][:content] %></p>
          <% @reviews[i][:rating].times do %>
            <i class="fas fa-star"></i>
          <% end %><br>
           <br><p><button type="button" class="b-border-tbg" data-toggle="modal" data-target="#addEvent<%= event.id %>ReviewModal">
                Edit Review
              </button></p>
            <%= render 'reviews/new_modal', event: event, review: Review.new  %>
          <p><%= link_to 'Delete review', event_review_path(event, @reviews[i]), method: :delete, data: { confirm: "Are you sure?" }, class: "b-border-tbg" %></p>
        </div>
      <% else %>
         <p><button type="button" class="button b-border-tbg" data-toggle="modal" data-target="#addEvent<%= event.id %>ReviewModal">
              Add Review
            </button></p>
          <%= render 'reviews/new_modal', event: event, review: Review.new  %>
      <% end %>

    </div>
    <% end %>
  </div>
  <% end %>

  <% if (@unconfirmed_events.empty? && @past_events.empty?) && @current_events.empty? %>

    <h1> No events.. yet !</h1>
  <% end %>
  </div>


</div>
