<div class="banner-index" style="background-image: linear-gradient(rgba(0,0,0,0.6),rgba(0,0,0,0.6)), url(https://source.unsplash.com/_Yc7OtfFn-0/1200x600);">
  <div class="container">
  <h1 class= "white">All <br> artists</h1>
  </div>
</div>


<div class="container">
  <h1 class="t">Search for an artist in your neighbourhood</h1>
        <div
      id="map"
      style="width: 100%;
      height: 400px; margin: 10px auto; box-shadow: 0 0 10px rgba(0,0,0,0.2);"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
    ></div>

  <br><h1 class="t">All artists</h1>

      <div class="row">
        <% @artists.each do |artist| %>
          <div class="col-xs-10 col-sm-6 col-md-4">
            <% if artist.photo %>
              <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.2)), url('<%= artist.photo %>');">
              <%= link_to artist.username, profile_path(artist), class:"artist no" %>
              </div>
            <%end%>
          </div>
        <%end%>
      </div><br>

</div>



